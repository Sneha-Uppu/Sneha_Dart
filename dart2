//Use of functions

void main() {
  perimeter(4,2);
  
  int rectArea = area(10,5);
  print("The area is $rectArea");
  
  int rectVol = volume(2,3,4);
  print("The volume is $rectVol");
}

void perimeter(int l, int b)
{
  int perimeter = 2 * (l + b);
  print("The perimeter is $perimeter");
}

int area(int l, int b)
{
  int area = l * b;
  return area;
}

int volume(int l, int b, int h)
{
  int vol = l * b * h;
  //return vol;
}
